@model CustomerRelationsManagement.Common.Models.ProjectTaskEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1><strong>Edit Task</strong></h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ProjectId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="IsComplete" class="control-label"></label>
                <div>
                    <select asp-for="IsComplete" class="form-control">
                        <option value="true">Complete</option>
                        <option value="false">Incomplete</option>
                    </select>
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.TaskPriority)
                @Html.DropDownListFor(model => model.TaskPriority, Enum.GetValues(typeof(TaskPriority)).Cast<TaskPriority>().Select(p =>
                new SelectListItem
                {
                Text = p.ToString(),
                Value = p.ToString()
                }), "Select Priority", new { @class = "form-control" })
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateDue" class="control-label"></label>
                <input asp-for="DateDue" class="form-control" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a asp-controller="Home" asp-action="ProjectDetails" asp-route-projectId="@Model?.ProjectId" class="btn btn-dark">Back</a>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>