@model CustomerRelationsManagement.Common.Models.ProjectTaskCreateViewModel

@{
    ViewData["Title"] = "Create Task";
}

<h1><strong>Create Task</strong></h1>

<br />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(model => model.TaskPriority)
                @Html.DropDownListFor(model => model.TaskPriority, Enum.GetValues(typeof(TaskPriority)).Cast<TaskPriority>().Select(p =>
                new SelectListItem
                {
                Text = p.ToString(),
                Value = p.ToString()
                }), "Select Priority", new { @class = "form-control" })
                <span asp-validation-for="TaskPriority" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DateDue" class="control-label"></label>
                <input asp-for="DateDue" class="form-control" />
                <span asp-validation-for="DateDue" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-secondary" asp-controller="Home" asp-action="ProjectDetails" asp-route-projectId="@Model?.ProjectId">Back</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(model => model.ProjectId)
        </form>
    </div>
</div>

