@model LeaveRequestViewModel

@{
    ViewData["Title"] = "Details";
    string className; 
    string headerText;

    if (Model.Approved == null)
    {
        headerText = "Pending Approval";
        className = "warning";
    }
    else if (Model.Approved == true)
    {
        headerText = "Approved";
        className = "success";
    }
    else
    {
        headerText = "Rejected";
        className = "danger";
    }
}

<h1>Leave Request Details</h1>

<div class="alert alert-@className" role="alert">
    <h2 class="alert-heading">@headerText</h2>
    <hr />
    <p>
        <strong>Employee Name:</strong> @Model.Employee.Firstname @Model.Employee.Lastname
    </p>
    <hr />
    <p>
        <strong>Date Requested:</strong> @Html.DisplayFor(model => model.DateRequested)
    </p>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateRequested)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateRequested)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
