@model CustomerRelationsManagement.Web.Models.LeaveRequestCreateViewModel

@{
    ViewData["Title"] = "Apply for leave";
}

<h1>Apply for leave</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label"></label>
                <select asp-for="LeaveTypeId" class="form-select" asp-items="Model?.LeaveTypes">
                    <option>Select Leave Type</option>
                </select>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control datepicker" type="text" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                </div>
                <br />
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control datepicker" type="text" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>          
            </div>
            <br />
            <div class="form-group">
                <label asp-for="RequestComments" class="control-label"></label>
                <textarea asp-for="RequestComments" class="form-control"></textarea>
                <span asp-validation-for="RequestComments" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-secondary btn-block" asp-action="Index">Back to List</a>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

